<header>
    <section class="menu-usuario">

        <div class="search">
            <form class="navbar-form navbar-left" method="get" action="/search">
                <input type="text" class="search-bar-input" placeholder="Buscar..." />
                <button type="submit" class="search-bar-bu">
                    <i class="fas fa-search"></i> </button>
            </form>
        </div>

        <div class="logOut">
            <%if (session) { %>
                <a href="/users/logout">
                    <span>Cerrar sesion</span>
                </a>
                <% } %>
        </div>

        <div class="menu-login">
            <%if (session) { %>
                <a href="/users/<%= session.id %>">
                    <img src="/img/users/<%= session.image %>" />
                </a>
                <% } else {%>
                    <a href="/users/login">
                        <i class="fas fa-user-circle"></i>
                    </a>
                    <% } %>
        </div>
    </section>

    <section class="menu-principal">
        <div class="inicio">
            <a href="/">
                <i class="fas fa-home"></i>
            </a>
            <span>INICIO</span>
        </div>

        <div class="productos">
            <a href="/products">
                <i class="fas fa-clipboard-list"></i>
            </a>
            <span>PRODUCTOS</span>
        </div>

        <div class="carrito">
            <a href="/carrito">
                <i class="fas fa-shopping-cart"></i></a>
            <span>CARRITO</span>
        </div>

    </section>

    <section class="encabezado">
        <div class="logo">
            <a href="/" class="logo-carrot">
                <img class="logo-carrot" src="/img/logoCarrot.png" alt="logo">
            </a>
        </div>
        <div class="carrot">
            <span class="titulo">Carrot</span>
            <br>
            <span class="eslogan">mercado natural</span>
        </div>
    </section>

</header>