<!DOCTYPE html>
<html lang="en">

<!-- HEAD -->
<%- include("./partials/head") %>

    <body>
        <!-- HEADER -->
        <%- include("./partials/header") %>
            <main>
                <section class="detalles">
                    <h2>
                        <%=product.name%>
                    </h2>

                    <div class="product-details">
                        <img src="/img/products/<%= product.type %>/<%= product.image %>" alt="mielLiquida">
                        <div class="info-product-details">
                            <p class="descrip">
                                <%= product.description %>
                            </p>
                            <p class="precio">
                                $<%= product.price %>
                            </p>
                            <a href="/carrito">
                                <button class="boton-agregar">AGREGAR AL CARRITO</button>
                            </a>
                        </div>
                    </div>

                    <% if (session?.typeOfUser_id==1) { %>
                        <div>
                            <a href="/products/edit/<%=product.id%>">
                                <button class="edit">EDITAR</button>
                            </a>
                        </div>
                        <div>

                            <form action="/products/delete/<%=product.id%>?_method=DELETE" class="delete" method="POST"
                                enctype="multipart/form-data">
                                <button type="submit" class="delete">BORRAR</button>
                            </form>

                        </div>
                        <% } %>

                </section>

                <p class="boton-compartir">Compartir</p>
                <section class="compartir">
                    <i class="fab fa-instagram"></i>
                    <i class="fab fa-twitter"></i>
                    <i class="fab fa-facebook"></i>
                </section>

            </main>

            <!-- FOOTER -->
            <%- include("./partials/footer") %>

    </body>

</html>