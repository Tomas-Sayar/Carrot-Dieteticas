<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Formulario de creación' }) %>

    <body>
        <!-- Header -->
        <%- include('partials/header') %>
            <!-- /Header -->


            <div class="container products-wrapper">
                <div class="row">
                    <div class="col-12">
                        <h1 class="products-title">Formulario de creación de productos</h1>
                    </div>
                </div>
                <div class="col-12">
                    <form action="/products/create" method="post" class="creacion-producto"enctype="multipart/form-data">
                        <div class="row product-detail">
                            <div class="col-12 col-md-6">
                            <label for="name" class="form-label">Nombre del producto:</label>
                                <input type="text" id="name" name="name" placeholder="Ej: Pan de semillas"
                                    class="form-input">
                            </div>
<br>
                            <div class="col-12 col-md-6">
                                <label for="type" class="form-label">Tipo de Producto:</label>
                                <select name="type" class="form-control" id="type" class="form-input">
                                    <option value="">Elegí</option>
                                    <option value="1">Leches</option>
                                    <option value="2">Cereales</option>
                                    <option value="3">Frutos Secos</option>
                                    <option value="4">Granola</option>
                                </select>
                            </div>
                            <br>
                            
                            <div class="col-12 col-md-6">
                                <label for="price" class="form-label">Precio del producto:</label>
                                <input type="text" id="price" name="price" placeholder="Ej: $300" class="form-input">
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="discount" class="form-label">Descuento:</label>
                                <input type="text" id="discount" name="discount" placeholder="Ej: 10%"
                                    class="form-input">
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="category" class="form-label">Categoría:</label>
                                <select name="category" id="category" class="form-input">
                                    <option value="">Elegí</option>
                                    <option value="1">Nuevo</option>
                                    <option value="2">En oferta</option>
                                    <option value="3">Destacados</option>
                                </select>
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="brand" class="form-label">Marca:</label>
                                <select name="brand" id="brand" class="form-input">
                                    <option value="">Elegí</option>
                                    <option value="1">olibo</option>
                                    <option value="2">vrink</option>
                                    <option value="3">god bless you</option>
                                    <option value="4">hacendado</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label for="description" class="form-label">Descripción:</label>
                                <textarea name="description" id="description" class="form-input" cols="30"
                                    rows="10"></textarea>
                            </div>
                            <br>
                            <div class="col-12">
                                <label for="product-image" class="form-label">Imagen:</label>
                                <input type="file" id="product-image" name="product-image" class="form-input" accept=".jpg, .jpeg, .png, .gif" multiple
                                    required>
                            </div>
                            
                                <div class="button">
                                    <button type="submit" class="buy-now-button">Guardar</button>
                                </div>
                                <div class="errores"><ul></ul></div>
                    </form>
                </div>
            </div>
            <!-- /todos los productos -->

            <!-- footer -->
            <%- include('partials/footer') %>
                <!-- /footer -->

                 <!--enlace con javascript frotend-->
             <script type="text/javascript" src= "/js/js-front-creacion-producto.js"></script>
    </body>

</html>